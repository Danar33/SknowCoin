<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ligth_bg">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/area_sistemas"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Nombre:"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <TextView
        android:id="@+id/textViewCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewNombre"
        android:layout_below="@+id/textViewNombre"
        android:layout_marginTop="23dp"
        android:text="Codigo:" />

    <TextView
        android:id="@+id/textViewCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewCodigo"
        android:layout_below="@+id/textViewCodigo"
        android:layout_marginTop="23dp"
        android:text="Correo:" />

    <TextView
        android:id="@+id/textViewTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewCorreo"
        android:layout_below="@+id/textViewCorreo"
        android:layout_marginTop="20dp"
        android:text="Telefono:" />

    <TextView
        android:id="@+id/textViewArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewTelefono"
        android:layout_below="@+id/textViewTelefono"
        android:layout_marginTop="20dp"
        android:text="Area:" />

    <TextView
        android:id="@+id/textViewSemestre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewArea"
        android:layout_below="@+id/textViewArea"
        android:layout_marginTop="21dp"
        android:text="Semestre:" />

    <Button
        android:id="@+id/buttonEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="buttonEditarAction"
        android:text="Editar" />

    <EditText
        android:id="@+id/editText_Semestre"
        style="@style/input_text_inicio"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textViewSemestre"
        android:layout_alignBottom="@+id/textViewSemestre"
        android:layout_alignStart="@+id/editText_Area"
        android:background="@drawable/input_text_circular"
        android:ems="8" />

    <EditText
        android:id="@+id/editText_Area"
        style="@style/input_text_inicio"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textViewArea"
        android:layout_alignBottom="@+id/textViewArea"
        android:layout_alignStart="@+id/editText_Telefono"
        android:background="@drawable/input_text_circular"
        android:ems="8" />

    <EditText
        android:id="@+id/editText_Telefono"
        style="@style/input_text_inicio"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textViewTelefono"
        android:layout_alignBottom="@+id/textViewTelefono"
        android:layout_alignStart="@+id/editText_Correo"
        android:background="@drawable/input_text_circular"
        android:ems="8" />

    <EditText
        android:id="@+id/editText_Correo"
        style="@style/input_text_inicio"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textViewCorreo"
        android:layout_alignBottom="@+id/textViewCorreo"
        android:layout_alignStart="@+id/editText_Codigo"
        android:background="@drawable/input_text_circular"
        android:ems="8" />

    <EditText
        android:id="@+id/editText_Codigo"
        style="@style/input_text_inicio"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/input_text_circular"
        android:ems="8"
        android:layout_alignBaseline="@+id/textViewCodigo"
        android:layout_alignBottom="@+id/textViewCodigo"
        android:layout_alignStart="@+id/editText_Nombre" />

    <EditText
        android:id="@+id/editText_Nombre"
        style="@style/input_text_inicio"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textViewNombre"
        android:layout_alignBottom="@+id/textViewNombre"
        android:layout_alignEnd="@+id/imageView2"
        android:background="@drawable/input_text_circular"
        android:ems="8" />

</RelativeLayout>